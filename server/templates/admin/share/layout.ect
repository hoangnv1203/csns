<!doctype html>
<html>
	<head>
		<title><%= @pageTitle %></title>
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
		<link rel="shortcut icon" type="image/png" href="/images/favicon-16.png"/>

		<!-- Css -->
		<link rel="stylesheet" href="/semantic/dist/semantic.css">
		<link rel="stylesheet" href="/css/device-visibility.css">
		<link rel="stylesheet" href="/css/utilities.css">
		<link rel="stylesheet" href="/css/admin.css">

		<% content 'stylesheet' %>
	</head>
	<body class="layouts pushable">
		<div class="ui right vertical inverted sidebar menu overlay">
			<% include 'admin/share/left-menu' %>
		</div>
		<div class="pusher">
			<div class="ui fixed top borderless menu inverted mobile only">
				<div class="item">
					<% if @backUrl : %>
						<a href="<%= @backUrl %>">
							<i class="large angle left icon"></i>
						</a>
					<% else : %>
						<a href="<%= @_url('admin.dashboard') %>">
							<i class="large grid layout icon"></i>
						</a>
					<% end %>
				</div>
				<% if @pageTitle : %>
					<div class="fitted item page title">
						<div class="page title content"><%= @pageTitle %></div>
					</div>
				<% end %>
					<% content 'mobile-control-buttons' %>
					<a class="active toc header item">
						<i class="large content icon"></i>
					</a>
			</div>
			<div class="control menu mobile hidden">
				<div class="ui menu secondary borderless menu">
					<div class="header item">
						<% content 'breadcrumb' %>
					</div>
					<div class="right menu">
						<% content 'control-buttons' %>
					</div>
				</div>
				<div class="ui fitted divider"></div>
			</div>
			<div class="full height mobile hidden">
				<div class="leftmenu">
					<div class="ui vertical inverted menu">
						<% include 'admin/share/left-menu' %>
					</div>
				</div>
			</div>
			<div class="content">
				<div class="ui main">
					<% content %>
				</div>
			</div>
		</div>

		<!-- Scripts -->
		<script src="/node_modules/jquery/dist/jquery.min.js"></script>
		<script src="/semantic/dist/semantic.js"></script>
		<script src="/js/master-side-menu.js"></script>
		<script src="/js/mobile-control-buttons.js"></script>
		<% content 'post-body' %>
	</body>
</html>
